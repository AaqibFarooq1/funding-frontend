<%=
  render partial: "partials/page_title",
    locals: {
        model_object: nil,
        page_title: t('salesforce_experience_application.download_instructions.page_title')
    }
%>

<h1 class="govuk-heading-xl">
  <%= t('salesforce_experience_application.download_instructions.page_heading') %>
</h1>

<div class="govuk-!-padding-bottom-4">
  <h2 class="govuk-heading-m">
    <%= t('salesforce_experience_application.download_instructions.what_you_need_to_do') %>
  </h2>

    <p class="govuk-body">
      <%= t('salesforce_experience_application.download_instructions.to_sign_the_form') %>
    </p>

    <ol class="govuk-list govuk-list--number">
      <li>
        <%= t('salesforce_experience_application.download_instructions.list.download') %>
      </li> 

      <li>
        <%= t('salesforce_experience_application.download_instructions.list.sign') %>
      </li>

        <ul class="govuk-list govuk-list--bullet">
          <li>
            <%= t('salesforce_experience_application.download_instructions.list.signing_options') %>
          </li>
        </ul>

      <li>
        <%= t('salesforce_experience_application.download_instructions.list.upload') %>
      </li>

    </ol>

    <p class="govuk-body">
      <%= t('salesforce_experience_application.download_instructions.all_signatures_must') %>
    </p>
</div>

<div class=" govuk-!-margin-bottom-9">
  <%=
    link_to(
      t('salesforce_experience_application.download_instructions.already_completed_link'),
      sfx_pts_payment_upload_permission_to_start_path(@salesforce_experience_application.salesforce_case_id),
      class: 'govuk-link',
    )
  %>
</div>

<%= form_tag(
    url: :sfx_pts_payment_download_instructions,
    method: :post,
    local: true
  ) do |f| 
%>

  <%= render(
      ButtonComponent.new(
        element: 'button',
        is_start_button: false,
        text: t('buttons.labels.continue')
      )
    ) 
  %>

<% end %>