<%
  content_for :page_title,
              flash[:errors].present? ? (t('generic.error') + ": " + t('support.page_title')).html_safe : (t('support.page_title')).html_safe
%>

<%=
  render partial: "partials/summary_errors_flash",
         locals: {
             first_form_element: :support_type_report_a_problem
         } if flash[:errors]
%>

<%= form_tag :support, class: "govuk-!-margin-bottom-0", local: true do |f| %>

  <div class="govuk-form-group <%= "govuk-form-group--error" if flash[:errors] %>">

    <fieldset class="govuk-fieldset" aria-describedby="how-can-we-help-hint">

      <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">

        <h1 class="govuk-fieldset__heading">
          <%= t('support.page_heading') %>
        </h1>

      </legend>

      <span id="changed-name-hint" class="govuk-hint">
        <%= t('support.headings.2') %>
      </span>

      <div class="govuk-radios">

        <div class="govuk-radios__item">

          <%= radio_button_tag :support_type, "report_a_problem", false, class: "govuk-radios__input" %>
          <%= label_tag :support_type_report_a_problem, t('support.items.1'), class: "govuk-label govuk-radios__label" %>

        </div>

        <div class="govuk-radios__item">

          <%= radio_button_tag :support_type, "ask_a_question", false, class: "govuk-radios__input" %>
          <%= label_tag :support_type_ask_a_question, t('support.items.2'), class: "govuk-label govuk-radios__label" %>

        </div>

      </div>

    </fieldset>

  </div>

  <%=
    submit_tag t('buttons.labels.continue'),
             class: 'govuk-button',
             role: 'button',
             'data-module' => 'govuk-button'
  %>  

<% end %>

    <div class="govuk-inset-text govuk-!-margin-top-2 govuk-!-margin-bottom-6">
      <p class="govuk-body">
        <%= t('support.text.support_hours.1') %>
      </p>
      <p class="govuk-body">
        <%= t('support.text.support_hours.2') %>
      </p>
    </div>

    <hr class="govuk-section-break govuk-!-margin-bottom-7 govuk-section-break--visible">
    
    <h2 class="govuk-heading-m"><%= t('support.headings.3') %></h2>

    <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-6">
      <li>
        <a href= "<%= I18n.locale == :cy ? 'https://www.heritagefund.org.uk/cy/node/110955' : 'https://www.heritagefund.org.uk/funding/what-we-fund' %>">
          <%= t('support.links.1') %>
        </a>
      </li>
      <li>
        <a href= "<%= I18n.locale == :cy ? 'https://www.heritagefund.org.uk/cy/node/110862' : 'https://www.heritagefund.org.uk/funding/outcomes' %>">
          <%= t('support.links.2') %>
        </a>
      </li>
      <li>
        <a href= "<%= I18n.locale == :cy ? 'https://www.heritagefund.org.uk/cy/node/110838' : 'https://www.heritagefund.org.uk/funding' %>">
          <%= t('support.links.3') %>
        </a>
      </li>
    </ul>


    <h2 class="govuk-heading-m"><%= t('support.headings.4') %></h2>

    <h3 class="govuk-heading-s"><%= t('support.headings.5') %></h3>
    <p class="govuk-body">020 7591 6044</p>

    <h3 class="govuk-heading-s"><%= t('support.headings.6') %></h3>
    <p class="govuk-body"><%= t('support.text.insert_18001_plus') %> 020 7591 6044</p>
