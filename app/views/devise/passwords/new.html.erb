<%=
  render partial: "partials/page_title",
         locals: {
             model_object: resource,
             page_title: t('passwords.new.page_title')
         }
%>

<%= 
  form_for(
    resource,
    as: resource_name,
    url: password_path(resource_name),
    html: { method: :post }
  ) do |f| 
%>
  
  <%= 
    render "devise/shared/error_messages",
    resource: resource 
  %>

  <div class="govuk-form-group">

    <fieldset class="govuk-fieldset">
      <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
        <h1 class="govuk-fieldset__heading">
          <%= t('passwords.new.page_heading') %>
        </h1>
      </legend>    
    
      <%= 
        f.label :email,
        t('passwords.new.label_email'),
        class: "govuk-label" 
      %>

      <span id="email-hint" class="govuk-hint">
        <%= t('passwords.new.label_email_hint') %>
      </span>

      <%= 
        f.text_field :email,
        autofocus: true,
        autocomplete: "email",
        class: "govuk-input govuk-input--width-20" 
      %>
    
    </fieldset>



  </div>

  <div class="govuk-form-group">
    <%= 
      render(
        ButtonComponent.new(
          text: t('passwords.new.buttons.reset_password')
        )
      )
    %>
  </div>

<% end %>
