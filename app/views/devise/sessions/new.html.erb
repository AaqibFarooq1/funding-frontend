<%=
  render partial: "partials/page_title",
         locals: {
             model_object: resource,
             page_title: "Sign in"
         }
%>

<%= render "devise/shared/error_messages", resource: resource %>

<div class="nlhf-banner">

  <svg class="nlhf-banner__icon" fill="currentColor" role="presentation" focusable="false" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25" height="25" width="25">
  <path d="M13.7,18.5h-2.4v-2.4h2.4V18.5z M12.5,13.7c-0.7,0-1.2-0.5-1.2-1.2V7.7c0-0.7,0.5-1.2,1.2-1.2s1.2,0.5,1.2,1.2v4.8
  C13.7,13.2,13.2,13.7,12.5,13.7z M12.5,0.5c-6.6,0-12,5.4-12,12s5.4,12,12,12s12-5.4,12-12S19.1,0.5,12.5,0.5z" /></svg>

  <div class="nlhf-banner__message">

    <% if Flipper.enabled?(:bau) %>
      <p class="govuk-heading-m">This is a new application form for grants of £3,000-£10,000 in:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>Scotland</li>
        <li>North of England</li>
      </ul>
      <p class="govuk-body"> If you’re applying from any other part of the UK, or for any other grant amount <a href="https://forms.hlf.org.uk/officeforms/HLF_Projects.ofml">go to the application portal</a></p>
    <% else %>
      <h2 class="govuk-heading-m">Important announcement</h2>
      <p class="govuk-body"> To meet the immediate needs of the organisations we support during the COVID-19 crisis, we are halting all new single-stage delegated grants (£3k-£250k) and Committee-level grants (£250k-£5m) until at least October 2020.</p>
      <p class="govuk-body govuk-!-margin-bottom-3"><a href="https://www.heritagefund.org.uk/news/coronavirus-update">Find out more about our COVID-19 response</a></p>
    <% end %>
  </div>



</div> 

<h1 class="govuk-heading-l">Sign in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do | f | %>

  <div class="govuk-form-group">
    <%= f.label :email, class: "govuk-label" %>
    <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "govuk-input govuk-input--width-20" %>
  </div>

  <div class="govuk-form-group">
    <%= f.label :password, class: "govuk-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "govuk-input govuk-input--width-20" %>
  </div>

  <div class="govuk-form-group">
    <%= render(ButtonComponent.new(
      text: "Sign in"
    )) %>
  </div>

<% end %>

<h3 class="govuk-heading-m">Problems signing in?</h3>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="govuk-body govuk-!-margin-bottom-1"><%= link_to "Forgot your password", new_password_path(resource_name) %></p>
<% end %>

<%# TODO remove bau flipper %>
<% if Flipper.enabled?(:bau) %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p class="govuk-body"><%= link_to "Didn't receive confirmation instructions", new_confirmation_path(resource_name) %></p>
  <% end %>


  <div class="govuk-inset-text">

    <p class="govuk-body">
      This is a new application form. If you haven't logged in here before, you might not have an account with us. You will need to <%= link_to "create a new account", new_registration_path(resource_name) %> to apply.
    </p>
  </div>

  <p class="govuk-body">
    If you started an application for a grant of £3,000 to £10,000 before 3 February 2020, sign in at <a href="https://forms.hlf.org.uk/officeforms/HLF_Projects.ofml">our application portal</a>.
  </p>
<% end %>

