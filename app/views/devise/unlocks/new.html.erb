<%=
  render partial: "partials/page_title",
         locals: {
             model_object: resource,
             page_title: t('unlocks.new.page_title')
         }
%>

<h1 class="govuk-heading-l">
  <%= t('unlocks.new.page_heading') %>
</h2>

<%= 
  form_for(
    resource,
    as: resource_name,
    url: unlock_path(resource_name),
    html: { method: :post }
  ) do |f| 
%>

  <%= 
    render "devise/shared/error_messages",
    resource: resource 
  %>

  <div class="govuk-form-group">

    <%= 
      f.label :email,
      t('unlocks.new.label_email'),
      class: "govuk-label" 
    %>

    <%= 
      f.text_field :email,
      autofocus: true,
      autocomplete: "email",
      class: "govuk-input govuk-input--width-20"
    %>

    <%= 
      render(
        ButtonComponent.new(
          text: t('unlocks.new.buttons.resend')
        )
      )
    %>

  </div>

<% end %>

<%= 
  render "devise/shared/links" 
%>
