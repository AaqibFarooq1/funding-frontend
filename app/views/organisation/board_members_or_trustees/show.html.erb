<%=
  render(
    partial: 'partials/page_title',
    locals: {
      model_object: @organisation,
      page_title: t('board_members_or_trustees.page_title')
    }
  )
%>

<%= content_for :secondarycontent do %>
  <%= 
    render partial: "partials/summary/summary_link", locals: {
      summary_link: organisation_summary_path
    } 
  %>
<% end %>

<%=
  render(
    partial: 'partials/summary_errors',
    locals: {
      form_object: @organisation,
      first_form_element: :organisation_board_members_or_trustees
    }
  ) if @organisation.errors.any?
%>

<%=
  form_with model: @organisation,
  url: :organisation_board_members_or_trustees,
  method: :put,
  local: true do |f|
%>

  <%=
    render(
      partial: 'partials/organisation/board_members_or_trustees_question',
      locals: {
        model_object: @organisation,
        form_object: f
      }
    )
  %>

  <%= render(ButtonComponent.new(element: 'input')) %>

<% end %>
