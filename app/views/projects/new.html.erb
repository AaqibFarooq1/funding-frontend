<h1>New Project</h1>

<%= form_with model: @project, class: "nifty_form" do |f| %>
    <%= label_tag(:project_title, "Project title") %>
    <%= f.text_field :project_title %>
    <br />
    <%= label_tag(:files, "Attach evidence") %>
    <%= f.file_field :files, multiple: true %>
    <%= f.submit "Submit" %>
<% end %>

<%= link_to 'Back', projects_path %>
