<%=
  render(
    partial: 'partials/page_title',
    locals: {
      model_object: @organisation,
      page_title: t('spend_last_year.page_title')
    }
  )
%>

<%= content_for :secondarycontent do %>
  <%= 
    render partial: "partials/summary/summary_link", locals: {
      summary_link: funding_application_gp_open_medium_summary_path
    } 
  %>
<% end %>

<%=
  render(
    partial: 'partials/summary_errors',
    locals: {
      form_object: @organisation,
      first_form_element: :organisation_spend_in_last_financial_year
    }
  ) if @organisation.errors.any?
%>

<%=
  form_with model: @organisation,
  url: :funding_application_gp_open_medium_spend_last_year,
  method: :put,
  local: true do |f|
%>

  <%=
    render(
      partial: 'partials/organisation/spend_last_year_question',
      locals: {
        model_object: @organisation,
        form_object: f
      }
    )
  %>

  <%= render(ButtonComponent.new(element: 'input')) %>

<% end %>
