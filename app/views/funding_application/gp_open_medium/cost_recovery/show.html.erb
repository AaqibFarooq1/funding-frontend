<%=
  render(
    partial: 'partials/page_title',
    locals: {
      model_object: @funding_application.open_medium,
      page_title: t('cost_recovery.page_title')
    }
  )
%>

<noscript><% no_js = true %></noscript>

<div id="summary-errors"></div>

<%=
  render(
    partial: 'partials/summary_errors',
    locals: {
      form_object: @funding_application.open_medium,
      first_form_element: :open_medium_full_cost_recovery_file
    }
  ) if @funding_application.open_medium.errors.any?
%>

<%=
  form_with model: @funding_application.open_medium,
  url: :funding_application_gp_open_medium_full_cost_recovery,
  method: :put,
  remote: no_js ? false : true do |f|
%>

  <%=
    render(
      partial: 'partials/funding_application/cost_recovery_question',
      locals: {
        model_object: @funding_application.open_medium,
        model_object_name: 'open_medium',
        form_object: f
      }
    )
  %>

<% end %>

<%=
  render(
    ButtonComponent.new(
      element: 'a',
      href: funding_application_gp_open_medium_work_briefs_url
    )
  )
%>
