<%=
  render(
    partial: 'partials/page_title',
    locals: {
      model_object: @funding_application.open_medium,
      page_title: t('declaration.page_title')
    }
  )
%>

<%= content_for :secondarycontent do %>
  <%= 
    render partial: "partials/summary/summary_link", locals: {
      summary_link: funding_application_gp_open_medium_summary_path
    } 
  %>
<% end %>

<%=
  render(
    partial: 'partials/summary_errors',
    locals: {
      form_object: @funding_application.open_medium,
      first_form_element: :open_medium_partnership_details
    }
  ) if @funding_application.open_medium.errors.any?
%>

<%=
  form_for @funding_application.open_medium,
  url: :funding_application_gp_open_medium_declaration,
  method: :put,
  local: true do |f|
%>

  <%=
    render(
      partial: 'partials/funding_application/declaration/question',
      locals: {
        model_object: @funding_application.open_medium,
        model_object_name: 'open_medium',
        standard_terms_link: @standard_terms_link,
        form_object: f
      }
    )
  %>

  <%=
    render(
      ButtonComponent.new(
        element: 'input',
        text: t('buttons.labels.continue')
      )
    )
  %>

<% end %>
