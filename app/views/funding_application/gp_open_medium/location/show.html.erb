<%=
  render(
    partial: 'partials/page_title',
    locals: {
      model_object: @funding_application.open_medium,
      page_title: t('location.page_title')
    }
  )
%>

<%=
  render(
    partial: 'partials/summary_errors',
    locals: {
      form_object: @funding_application.open_medium,
      first_form_element: :open_medium_same_location_yes
    }
  ) if @funding_application.open_medium.errors.any?
%>

<%=
  form_for @funding_application.open_medium,
  url: :funding_application_gp_open_medium_location,
  method: :put do |f|
%>

  <%=
    render(
      partial: 'partials/funding_application/location_question',
      locals: {
        model_object: @funding_application.open_medium,
        form_object: f
      }
    )
  %>

  <%= render(ButtonComponent.new(element: 'input')) %>

<% end %>
