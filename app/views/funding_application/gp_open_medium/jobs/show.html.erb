<%=
  render(
    partial: 'partials/page_title',
    locals: {
      model_object: @funding_application.open_medium,
      page_title: I18n.t('jobs.page_title')
    }
  )
%>

<noscript><% no_js = true %></noscript>

<div id="summary-errors"></div>

<%=
  render(
    partial: 'partials/summary_errors',
    locals: {
      form_object: @funding_application.open_medium,
      first_form_element: :open_medium_job_description_files
    }
  ) if @funding_application.open_medium.errors.any?
%>

<%=
  form_with model: @funding_application.open_medium,
  url: :funding_application_gp_open_medium_jobs_or_apprenticeships,
  method: :put,
  remote: no_js ? true : false do |f|
%>

  <%=
    render(
      partial: 'partials/funding_application/jobs_question',
      locals: {
        model_object: @funding_application.open_medium,
        form_object: f
      }
    )
  %>

<% end %>

<%=
  render(
    ButtonComponent.new(
      element: 'a',
      href: funding_application_gp_open_medium_costs
    )
  )
%>
