<% if @funding_application.open_medium.errors.any? %>

  document.title = "Error: <%== I18n.t('jobs.page_title') %>";

  removeAllFormGroupErrors(
    "jobs_or_apprenticeships_description-form-group",
    "jobs_or_apprenticeships_description-errors"
  );

  removeAllFormGroupErrors(
    "job_description_files-form-group",
    "job_description_files-errors"
  );

  createSummaryErrorsSkeleton();

  var errorKeys = [];

  <% @funding_application.open_medium.errors.each do |error| %>

    errorKeys.push("<%= error.attribute.to_s %>");

    addSummaryError(
      false,
      "<%= error.attribute %>",
      "<%= error.message %>",
      "open_medium"
    );

    addFormGroupError(
      "<%= error.attribute %>-form-group",
      "<%= error.attribute %>-errors",
      "<%= error.attribute %>",
      "<%= error.message %>",
      "open_medium"
    );

  <% end %>

<% end %>
