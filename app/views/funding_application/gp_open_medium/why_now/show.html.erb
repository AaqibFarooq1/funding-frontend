<%=
  render(
    partial: 'partials/page_title',
    locals: {
      model_object: @funding_application.open_medium,
      page_title: t('why_now.page_title')
    }
  )
%>

<%=
  render(
    partial: 'partials/summary_errors',
    locals: {
      form_object: @funding_application.open_medium,
      first_form_element: :open_medium_why_now_description
    }
  ) if @funding_application.open_medium.errors.any?
%>

<%=
  form_with model: @funding_application.open_medium,
  url: :funding_application_gp_open_medium_why_now,
  method: :put,
  local: true do |f|
%>

  <%=
    render(
      partial: 'partials/funding_application/why_now_question',
      locals: {
        model_object: @funding_application.open_medium,
        form_object: f
      }
    )
  %>

  <%= render(ButtonComponent.new(element: 'input')) %>

<% end %>
