<% if @funding_application.payment_details.errors.any? %>

  document.title = "Error: Confirm your bank details";

  createSummaryErrorsSkeleton();

  var errorKeys = [];

  <% @funding_application.payment_details.errors.each do |error| %>

    errorKeys.push("<%= error.attribute.to_s %>");

    addSummaryError(
      false,
      "<%= error.attribute %>",
      "<%= error.message %>",
      "payment_details"
    );

    addFormGroupError(
      "<%= error.attribute %>-form-group",
      "<%= error.attribute %>-errors",
      "<%= error.attribute %>",
      "<%= error.message %>",
      "payment_details"
    );

  <% end %>

<% end %>