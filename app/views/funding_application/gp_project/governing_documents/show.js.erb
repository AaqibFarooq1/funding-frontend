<% if @funding_application.project.errors.any? %>

    document.title = "Error: <%== I18n.t('governing_document.page_title') %>";

    removeAllFormGroupErrors(
        "governing_document_file-form-group",
        "governing_document_file-errors"
    );

    createSummaryErrorsSkeleton();

    var errorKeys = [];

    <% @funding_application.project.errors.each do |error| %>

        errorKeys.push("<%= error.attribute.to_s %>");

        addSummaryError(
            false,
            "<%= error.attribute %>",
            "<%= error.message %>",
            "project"
        );

        addFormGroupError(
            "<%= error.attribute %>-form-group",
            "<%= error.attribute %>-errors",
            "<%= error.attribute %>",
            "<%= error.message %>",
            "project"
        );

    <% end %>

<% end %>
