<% if @funding_application.project.errors.any? %>

  document.title = "Error: Evidence of support";

  createSummaryErrorsSkeleton();

  var errorKeys = [];

  <% @funding_application.project.errors.each do |error| %>

    errorKeys.push("<%= error.attribute.to_s %>");

    addSummaryError(
      false,
      "<%= error.attribute %>",
      "<%= error.message %>",
      "project",
      "evidence_of_support"
    );

    addFormGroupError(
      "<%= error.attribute %>-form-group",
      "<%= error.attribute %>-errors",
      "<%= error.attribute %>",
      "<%= error.message %>",
      "evidence_of_support",
      "project"
    );

  <% end %>

  removeFormGroupErrors(
    "evidence_of_support",
    ["description", "evidence_of_support_files"],
    errorKeys
  );

<% end %>