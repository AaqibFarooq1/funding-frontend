<% if @funding_application.project.errors.any? %>

  document.title = "Error: <%= t('application.cash_contributions.page_title') %>";

  createSummaryErrorsSkeleton();

  var errorKeys = [];

  <% @funding_application.project.errors.each do |error| %>

    errorKeys.push("<%= error.attribute.to_s %>");

    addSummaryError(
      false,
      "<%= error.attribute %>",
      "<%= error.message %>",
      "project",
      "cash_contributions"
    );

    addFormGroupError(
      "<%= error.attribute %>-form-group",
      "<%= error.attribute %>-errors",
      "<%= error.attribute %>",
      "<%= error.message %>",
      "cash_contributions",
      "project"
    );

  <% end %>

  removeFormGroupErrors(
      "cash_contributions",
      ["description", "secured", "amount", "cash_contribution_evidence_files"],
      errorKeys
  );

<% end %>
