<% if @funding_application.project.errors.any? %>

  document.title = "<%= t('common.error') %>: <%= t('capital_works.page_title') %>";

  createSummaryErrorsSkeleton();

  var errorKeys = [];

  <% @funding_application.project.errors.each do |attr, msg| %>

    addSummaryError(
      false,
      "<%= attr %>",
      "<%= msg %>",
      "project",
      "capital_work_files"
    );

    addFormGroupError(
        "capital-works-form-group-main",
        "form-group-errors",
        "<%= attr %>",
        "<%= msg %>"
    );

  <% end %>

  removeFormGroupErrors(
    "capital-works",
    ["capital_work_files"],
    errorKeys
  );

<% end %>
