<% if @funding_application.project.errors.any? %>

  document.title = "<%= t('generic.error') %>: <%= t('capital_works.page_title') %>";

  createSummaryErrorsSkeleton();

  var errorKeys = [];

  <% @funding_application.project.errors.each do |error| %>

    addSummaryError(
      false,
      "<%= error.attribute %>",
      "<%= error.message %>",
      "project",
      "capital_work_files"
    );

    addFormGroupError(
        "capital-works-form-group-main",
        "form-group-errors",
        "<%= error.attribute %>",
        "<%= error.message %>"
    );

  <% end %>

  removeFormGroupErrors(
    "capital-works",
    ["capital_work_files"],
    errorKeys
  );

<% end %>
