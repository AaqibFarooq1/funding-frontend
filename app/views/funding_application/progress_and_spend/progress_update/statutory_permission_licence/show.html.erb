<%=
  render partial: "partials/page_title",
    locals: {
      model_object: nil,
      page_title:  t("progress_and_spend.progress_update.statutory_permission_licences.page_title")
    }
%>

<%=
  render(
    partial: 'partials/summary_errors',
    locals: {
      form_object: @funding_application.arrears_journey_tracker.progress_update,
      first_form_element: :progress_update_has_statutory_permissions_licence_true
    }
  ) if @funding_application.arrears_journey_tracker.progress_update.errors.any?
%>

<fieldset class="govuk-fieldset">
 	<legend class="govuk-fieldset__legend govuk-fieldset__legend--l">

		<span class="govuk-caption-xl govuk-!-padding-bottom-2">
			<%= t("progress_and_spend.progress_update.statutory_permission_licences.page_caption") %>
		</span>

		<h1 class="govuk-heading-l govuk-!-padding-bottom-2">
	  	<%= t("progress_and_spend.progress_update.statutory_permission_licences.page_heading") %>
		</h1>

	</legend class="govuk-fieldset__legend govuk-fieldset__legend--l">

	<%=
		render(
			partial: 'partials/funding_application/progress_and_spend/file_upload',
			locals: {
				input_field_id:  :'progress_update_statutory_permissions_licence.progress_update_statutory_permissions_licence_file', 
				form_object: @funding_application.arrears_journey_tracker.progress_update,
				file_model: @funding_application.arrears_journey_tracker.progress_update.progress_update_statutory_permissions_licence,
				file_field: :progress_update_statutory_permissions_licence_file,
				file_field_model: :progress_update_statutory_permissions_licence,
				radio_button: :has_statutory_permissions_licence,
				radio_true: :has_statutory_permissions_licence_true,
				radio_false: :has_statutory_permissions_licence_false,
				attachments: @attachments_hash,
				translations_local: 'progress_and_spend.progress_update.statutory_permission_licences',
				url_path: funding_application_progress_and_spend_progress_update_permissions_or_licences_path()
