<%=
  render partial: "partials/page_title",
  locals: {
    model_object: @funding_application,
    page_title: t('progress_and_spend.previous_submissions.previous_submission_dates.page_title')
  }
%>

<span class="govuk-caption-xl govuk-!-padding-bottom-2">
  <%= t('progress_and_spend.previous_submissions.previous_submission_dates.page_caption') %>
</span>

<h1 class="govuk-heading-l">
  <%= t('progress_and_spend.previous_submissions.previous_submission_dates.page_heading') %>
</h1>

<p class="govuk-body govuk-hint govuk-!-margin-bottom-8">
  <%= t('progress_and_spend.previous_submissions.previous_submission_dates.page_description') %>
</p>

<ul class="govuk-list nlhf-list nlhf-list--links govuk-list--number">
  <% @previous_submissions.each do |submission| %>
    <li class="govuk-!-padding-top-5 govuk-!-font-size-27">
      <span>
        <%=
          link_to(
            t('progress_and_spend.previous_submissions.previous_submission_dates.link_text', 
              submission_date: submission.submitted_on.strftime("%d %B %Y")),
            funding_application_progress_and_spend_previous_submissions_previously_submitted_path(
              completed_arrears_journey_id: submission.id),
            class: 'govuk-link govuk-link--no-visited-state'
          )
        %>
      </span>
    </li>
  <%end%>
</ul>
