<% if @model_object.errors.any? %>

    document.title = "Error: <%== I18n.t('agreement.sign_terms.page_title') %>";

    removeAllFormGroupErrors(
        "signed_terms_and_conditions-form-group",
        "signed_terms_and_conditions-errors"
    );

    createSummaryErrorsSkeleton();

    var errorKeys = [];

    <% @model_object.errors.each do |error| %>

        errorKeys.push("<%= error.attribute.to_s %>");

        addSummaryError(
            false,
            "<%= error.attribute %>",
            "<%= error.message %>",
            "funding_applications_legal_sig"
        );

        addFormGroupError(
            "<%= error.attribute %>-form-group",
            "<%= error.attribute %>-errors",
            "<%= error.attribute %>",
            "<%= error.message %>",
            "funding_applications_legal_sig"
        );

    <% end %>

<% end %>
