<% if @project.errors.any? %>

  document.title = "Error: Will capital work be part of your project?";

  createSummaryErrorsSkeleton();

  var errorKeys = [];

  <% @project.errors.each do |attr, msg| %>

    addSummaryError(
      false,
      "<%= attr %>",
      "<%= msg %>",
      "project",
      "capital_work_files"
    );

    addFormGroupError(
        "capital-works-form-group-main",
        "form-group-errors",
        "<%= attr %>",
        "<%= msg %>"
    );

  <% end %>

  removeFormGroupErrors(
    "capital-works",
    ["capital_work_files", "capital_work_file"],
    errorKeys
  );

<% end %>
