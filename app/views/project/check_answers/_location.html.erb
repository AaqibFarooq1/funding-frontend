<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key">
    <%= t('views.project.check_your_answers.where_is_your_project_taking_place') %>
  </dt>
  <dd class="govuk-summary-list__value">

    <% unless @project.line1.present? %>

      Not Answered

    <% else %>

      <% if @project.line1.present? %>
        <p><%= @project.line1 %></p>
      <% end %>

      <% if @project.line2.present? %>
        <p><%= @project.line2 %></p>
      <% end %>

      <% if @project.line3.present? %>
        <p><%= @project.line3 %></p>
      <% end %>

      <% if @project.townCity.present? %>
        <p><%= @project.townCity %></p>
      <% end %>

      <% if @project.county.present? %>
        <p><%= @project.county %></p>
      <% end %>

      <% if @project.postcode.present? %>
        <p><%= @project.postcode %></p>
      <% end %>

    <% end %>

  </dd>

  <%= render partial: 'project/project_check_answers/change_link',
             locals: {
                 link_url: three_to_ten_k_project_location_get_path,
                 link_hidden_label: t('views.project.check_your_answers.where_is_your_project_taking_place')
             }
  %>

</div>
