<div class="govuk-summary-list__row">
  <dt class="govuk-summary-list__key">
    <%= t('views.project.check_your_answers.captital_work') %>
  </dt>
  <dd class="govuk-summary-list__value">

    <%= @project.capital_work? ? "Yes" : "No" %>

    <% if @project.capital_work_file.present? %>
      <br />
      <p class="govuk-body">
        Uploaded file: <%= link_to(@project.capital_work_file.blob.filename,
                                   rails_blob_path(@project.capital_work_file,
                                                   disposition: "attachment"))
      %>
      </p>

    <% end %>

  </dd>

  <%= render partial: 'project/check_answers/change_link',
             locals: {
                 link_url: three_to_ten_k_project_capital_works_path,
                 link_hidden_label: t('views.project.check_your_answers.capital_work')
             }
  %>

</div>
