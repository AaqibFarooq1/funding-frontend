<% if @project.errors.any? %>

  document.title = "Error: Evidence of support";

  createSummaryErrorsSkeleton();

  var errorKeys = [];

  <% @project.errors.each do |attr, msg| %>

    errorKeys.push("<%= attr.to_s %>");

    addSummaryError(
      false,
      "<%= attr %>",
      "<%= msg %>",
      "project",
      "evidence_of_support"
    );

    addFormGroupError(
      "<%= attr %>-form-group",
      "<%= attr %>-errors",
      "<%= attr %>",
      "<%= msg %>",
      "evidence_of_support",
      "project"
    );

  <% end %>

  removeFormGroupErrors(
    "evidence_of_support",
    ["description", "evidence_of_support_files"],
    errorKeys
  );

<% end %>