<h1 class="govuk-heading-xl govuk-!-margin-bottom-3">
  Confirm declaration
</h1>

<form method="post" action="submit-application">
  <p class="govuk-body-l  govuk-!-margin-bottom-7">Now that you're happy with your application, you are ready to apply for funding.</p>
  <div class="govuk-form-group">
    <div class="govuk-checkboxes govuk-!-margin-bottom-7">
      <div class="govuk-checkboxes__item">
        <input class="govuk-checkboxes__input" id="confirm-declaration" name="confirm-declaration" type="checkbox" value="true" required>
        <label class="govuk-label govuk-checkboxes__label" for="confirm-declaration">
          I have read and agreed with the <a href="declaration">declaration</a>
        </label>
      </div>
    </div>
  </div>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token, id: :form_token %>
  <button class="govuk-button govuk-button--start" data-module="govuk-button">
    Submit application
    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" role="presentation" focusable="false">
      <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
    </svg>
  </button>
</form>

