<% tag_colour = '' if hash[:status] == t('generic.not_started') %>
<% tag_colour = 'blue' if hash[:status] == t('generic.in_progress') %>
<% tag_colour = 'grey' if hash[:status] == t('generic.submitted') %>

<%=
  render(
    partial: 'partials/tag_component',
    locals: {
      colour: tag_colour,
      tag_text: hash[:status],
      tag_id: hash[:salesforce_info][:Id]
    }
  )
%>
