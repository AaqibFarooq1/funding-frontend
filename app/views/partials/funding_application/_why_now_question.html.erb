<div class="govuk-character-count" data-module="govuk-character-count"
  data-maxwords="500">

  <div  class="govuk-form-group <%= "govuk-form-group--error" if
    model_object.errors[:why_now_description].any? %>">

    <h1 class="govuk-label-wrapper">

      <span class="govuk-caption-xl">
        <%= t('views.funding_application.common.about_your_project') %>
      </span>

      <%=
        form_object.label :why_now_description,
        t('why_now.page_heading'),
        class: 'govuk-label govuk-label--xl'
      %>

    </h1>

    <%=
      render(
        partial: "partials/form_input_errors",
        locals: {
          form_object: model_object,
          input_field_id: :why_now_description
          }
      ) if model_object.errors[:why_now_description].any?
    %>

    <%=
      form_object.text_area :why_now_description,
      rows: 10,
      class: "govuk-textarea govuk-js-character-count #{'govuk-input--error' if
        model_object.errors[:why_now_description].any?}",
      'aria-describedby' => 'open_medium_why_now_description-info'
    %>

    <span id="open_medium_why_now_description-info"
      class="govuk-hint govuk-character-count__message" aria-live="polite">
      <%= t('generic.word_count', max_words: 500) %>
    </span>

  </div>

</div>
