<div class="govuk-checkboxes__conditional govuk-checkboxes__conditional--hidden"
  id="conditional-<%= model_object_name %>_<%= designation %>">

  <div class="govuk-form-group">

    <%=
      form_object.label :hd_local_list_description,
      t('heritage_designations.labels.hd_local_list_description'),
      class: 'govuk-label'
    %>

    <%=
      form_object.text_field :hd_local_list_description,
      class: "govuk-input govuk-input--width-5 #{'govuk-input--error' if
        model_object.errors[:hd_local_list_description].any?}",
      'autocomplete' => 'off'
    %>

  </div>

</div>
