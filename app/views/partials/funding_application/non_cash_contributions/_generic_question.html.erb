<div class="govuk-form-group <%= "govuk-form-group--error" if
  model_object.errors.any? %>">

  <fieldset class="govuk-fieldset">

    <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">

      <h1 class="govuk-fieldset__heading">

        <span class="govuk-caption-xl">
          <%= t('views.funding_application.common.support_for_your_project') %>
        </span>

        <%= t('application.non_cash_contributions.generic_question_page.page_heading') %>

      </h1>

    </legend>

    <%=
      render(
        partial: 'partials/form_group_errors',
        locals: {
          form_object: model_object
        }
      ) if model_object.errors.any?
    %>

    <span id="project[non_cash_contributions_question]-hint" class="govuk-hint">
      <%= t('generic.select_one_option') %>
    </span>

    <div class="govuk-radios" data-module="govuk-radios">

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :non_cash_contributions_question,
          true,
          class: 'govuk-radios__input'
        %>

        <%=
          form_object.label :non_cash_contributions_question_true,
          t('application.non_cash_contributions.generic_question_page.labels.x_yes'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :non_cash_contributions_question,
          false,
          class: 'govuk-radios__input'
        %>

        <%=
          form_object.label :non_cash_contributions_question_false,
          t('application.non_cash_contributions.generic_question_page.labels.x_no'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

    </div>

  </fieldset>

</div>
