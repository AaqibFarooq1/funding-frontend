<div class="govuk-character-count" data-module="govuk-character-count"
  data-maxwords="500">

  <div class="govuk-form-group <%= "govuk-form-group--error" if
    model_object.errors[:matter].any? %>">

    <h1 class="govuk-label-wrapper">

      <span class="govuk-caption-xl">
        <%= t('views.funding_application.common.about_your_project') %>
      </span>

      <%=
        form_object.label :matter,
        t('application.matter.page_heading'),
        class: 'govuk-label govuk-label--xl'
      %>

    </h1>

    <p id="project_description-hint" class="govuk-hint">
      <%= t('application.matter.text.explain_community_interest') %>
    </p>

    <p id="project_description-hint2" class="govuk-hint">
      <%= t('application.matter.text.is_heritage_in_a_formal_document') %>
    </p>

    <%=
      render(
        partial: 'partials/form_input_errors',
        locals: {
          form_object: model_object,
          input_field_id: :matter
        }
      ) if model_object.errors[:matter].any?
    %>

    <%=
      form_object.text_area :matter,
      rows: 10,
      class: 'govuk-textarea govuk-js-character-count ' \
        "#{'govuk-input--error' if model_object.errors[:matter].any?}",
      'aria-describedby' => "#{ model_object_name }_matter-info " \
        "#{ model_object_name }_matter-hint"
    %>

    <span id="<%= model_object_name %>_matter-info"
      class="govuk-hint govuk-character-count__message" aria-live="polite">
      <%= t('generic.word_count', max_words: 500) %>
    </span>

  </div>

</div>
