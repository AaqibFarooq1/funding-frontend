<div class="govuk-summary-list__row">

  <dt class="govuk-summary-list__key govuk-!-width-one-third">
    <%= t('funding_application.check_answers.project.management_description') %>
  </dt>

  <dd class="govuk-summary-list__value">

    <p class="govuk-body">
      <%=
        model_object.management_description.present? ?
        model_object.management_description :
        t('generic.not_answered')
      %>
    </p>

    <% if model_object.risk_register_file.present? %>
      
      <%=
        link_to(
          t('funding_application.check_answers.project.risk_register_file'),
          rails_blob_path(
            model_object.risk_register_file,
            disposition: 'attachment'
          ),
          title: "#{ t('generic.click_to_view_file') }: " \
            "#{ model_object.risk_register_file.filename }"
        )
      %>

    <% end %>
  
  </dd>

  <%=
    render(
      partial: 'partials/funding_application/check_answers/change_link',
      locals: {
        link_url: change_link,
        link_hidden_label: t(
          'funding_application.check_answers.project.management_description'
        )
      }
    )
  %>

</div>
