<div class="govuk-summary-list__row">

  <dt class="govuk-summary-list__key govuk-!-width-one-third">
    <%= t('funding_application.check_answers.organisation.spend_in_last_financial_year') %>
  </dt>

  <dd class="govuk-summary-list__value">
    <%=
      model_object.spend_in_last_financial_year.present? ?
      number_to_currency(
        model_object.spend_in_last_financial_year,
        strip_insignificant_zeros: true
       ) :
      t('generic.not_answered')
    %>
  </dd>

  <%=
    render(
      partial: 'partials/funding_application/check_answers/change_link',
      locals: {
        link_url: change_link,
        link_hidden_label: t(
          'funding_application.check_answers.organisation.spend_in_last_financial_year'
        )
      }
    )
  %>

</div>
