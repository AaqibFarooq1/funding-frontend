<div class="govuk-summary-list__row">

  <dt class="govuk-summary-list__key">
    <%= t('funding_application.check_answers.organisation.social_media_info') %>
  </dt>

  <dd class="govuk-summary-list__value">
    <%=
      model_object.social_media_info.present? ?
      model_object.social_media_info :
      t('funding_application.check_answers.not_answered')
    %>
  </dd>

  <%=
    render(
      partial: 'partials/funding_application/check_answers/change_link',
      locals: {
        link_url: change_link,
        link_hidden_label: t('funding_application.check_answers.organisation.social_media_info')
      }
    )
  %>

</div>
