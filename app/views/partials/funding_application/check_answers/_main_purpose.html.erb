<div class="govuk-summary-list__row">

  <dt class="govuk-summary-list__key govuk-!-width-one-third">
    <%= t('funding_application.check_answers.organisation.main_purpose') %>
  </dt>

  <dd class="govuk-summary-list__value">
    <%=
      model_object.main_purpose_and_activities.present? ?
      model_object.main_purpose_and_activities :
      t('generic.not_answered')
    %>
  </dd>

  <%=
    render(
      partial: 'partials/funding_application/check_answers/change_link',
      locals: {
        link_url: change_link,
        link_hidden_label: t(
          'funding_application.check_answers.organisation.main_purpose'
        )
      }
    )
  %>

</div>
