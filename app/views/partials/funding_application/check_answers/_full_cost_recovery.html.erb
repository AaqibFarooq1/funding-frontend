<div class="govuk-summary-list__row">

  <dt class="govuk-summary-list__key govuk-!-width-one-third">
    <%= t('funding_application.check_answers.project.full_cost_recovery') %>
  </dt>

  <dd class="govuk-summary-list__value">

    <% if model_object.full_cost_recovery_file.present? %>

      <%=
        link_to(
          model_object.full_cost_recovery_file.filename,
          rails_blob_path(
            model_object.full_cost_recovery_file,
            disposition: 'attachment'
          ),
          title: "#{ t('generic.click_to_view_file') }: " \
            "#{ model_object.full_cost_recovery_file.filename }"
        )
      %>

    <% else %>

      <%= t('funding_application.check_answers.not_answered') %>

    <% end %>
  
  </dd>

  <%=
    render(
      partial: 'partials/funding_application/check_answers/change_link',
      locals: {
        link_url: change_link,
        link_hidden_label: t(
          'funding_application.check_answers.project.full_cost_recovery'
        )
      }
    )
  %>

</div>
