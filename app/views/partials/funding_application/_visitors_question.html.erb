<div class="govuk-form-group <%= 'govuk-form-group--error' if
  model_object.errors[:heritage_attracts_visitors].any? ||
  model_object.errors[:visitors_in_last_financial_year].any? ||
  model_object.errors[:visitors_expected_per_year].any? %>">

  <fieldset class="govuk-fieldset">

    <legend class="govuk-fieldset__legend govuk-fieldset__legend-xl">

      <span class="govuk-caption-xl">
        <%= t('views.funding_application.common.about_your_project') %>
      </span>

      <h1 class="govuk-fieldset__heading">

        <%=
          form_object.label :heritage_attracts_visitors,
          t('visitors.page_heading'),
          class: 'govuk-label govuk-label--xl'
        %>

      </h1>

    </legend>

    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">

      <%=
        render(
          partial: 'partials/form_input_errors',
          locals: {
            form_object: model_object,
            input_field_id: :heritage_attracts_visitors
            }
        ) if model_object.errors[:heritage_attracts_visitors].any?
      %>

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :heritage_attracts_visitors,
          'false',
          class: 'govuk-radios__input'
        %>

        <%=
          form_object.label :heritage_attracts_visitors_false,
          t('visitors.labels.heritage_attracts_visitors_no'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :heritage_attracts_visitors,
          'true',
          class: 'govuk-radios__input',
          'data-aria-controls' => "conditional-#{ model_object_name }_heritage_attracts_visitors_true"
        %>

        <%=
          form_object.label :heritage_attracts_visitors_true,
          t('visitors.labels.heritage_attracts_visitors_yes'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

      <div class="govuk-radios__conditional govuk-radios__conditional--hidden"
        id="<%= "conditional-#{:open_medium_heritage_attracts_visitors_true}" %>">

        <div class="govuk-form-group">

          <%=
            form_object.label :visitors_in_last_financial_year,
            t('visitors.labels.visitors_in_last_financial_year'),
            class: 'govuk-label govuk-label--s'
          %>

          <%=
            render(
              partial: 'partials/form_input_errors',
              locals: {
                form_object: model_object,
                input_field_id: :visitors_in_last_financial_year
              }
            ) if model_object.errors[:visitors_in_last_financial_year].any?
          %>


          <%=
            form_object.text_field :visitors_in_last_financial_year,
            class: "govuk-input govuk-input--width-10 #{'govuk-input--error' if
              model_object.errors[:visitors_in_last_financial_year].any?}"
          %>

        </div>

        <div class="govuk-form-group">

          <%=
            form_object.label :visitors_expected_per_year,
            t('visitors.labels.visitors_expected_per_year'),
            class: 'govuk-label govuk-label--s'
          %>

          <%=
            render(
              partial: 'partials/form_input_errors',
              locals: {
                form_object: model_object,
                input_field_id: :visitors_expected_per_year
              }
            ) if model_object.errors[:visitors_expected_per_year].any?
          %>


          <%=
            form_object.text_field :visitors_expected_per_year,
            class: "govuk-input govuk-input--width-10 #{'govuk-input--error' if
              model_object.errors[:visitors_expected_per_year].any?}"
          %>

        </div>

      </div>

    </div>

  </fieldset>

</div>
