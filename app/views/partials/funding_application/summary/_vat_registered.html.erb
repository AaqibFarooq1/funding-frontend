<div class="govuk-summary-list__row">

  <dt class="govuk-summary-list__key govuk-!-width-one-third">
    <%= t('funding_application.check_answers.organisation.vat_registered.question') %>
  </dt>

  <dd class="govuk-summary-list__value">

    <% unless model_object.vat_registered.nil? %>

      <%=
        model_object.vat_registered ?
        t('funding_application.check_answers.organisation.vat_registered.answer_yes') :
        t('funding_application.check_answers.organisation.vat_registered.answer_no')
      %>

    <% else %>
    
      <%= t('generic.not_answered') %>

    <% end %>

  </dd>

</div>
