<div class="govuk-summary-list__row">

  <dt class="govuk-summary-list__key govuk-!-width-one-third">
    <%= t('funding_application.check_answers.organisation.unrestricted_funds') %>
  </dt>

  <dd class="govuk-summary-list__value">
    <%=
      model_object.unrestricted_funds.present? ?
      number_to_currency(
        model_object.unrestricted_funds,
        strip_insignificant_zeros: true
       ) :
      t('generic.not_answered')
    %>
  </dd>

</div>
