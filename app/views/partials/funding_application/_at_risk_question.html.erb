<div class="govuk-form-group <%= 'govuk-form-group--error' if
  model_object.errors[:heritage_at_risk].any? || model_object.errors[:heritage_at_risk_description].any? %>">

  <fieldset class="govuk-fieldset">

    <legend class="govuk-fieldset__legend govuk-fieldset__legend-xl">

      <span class="govuk-caption-xl">
        <%= t('views.funding_application.common.about_your_project') %>
      </span>

      <h1 class="govuk-fieldset__heading">

        <%=
          form_object.label :heritage_at_risk,
          t('at_risk.page_heading'),
          class: 'govuk-label govuk-label--xl'
        %>

      </h1>

    </legend>

    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">

      <%=
        render(
          partial: 'partials/form_input_errors',
          locals: {
            form_object: model_object,
            input_field_id: :heritage_at_risk
            }
        ) if model_object.errors[:heritage_at_risk].any?
      %>

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :heritage_at_risk,
          'false',
          class: 'govuk-radios__input'
        %>

        <%=
          form_object.label :heritage_at_risk_false,
          t('at_risk.labels.heritage_at_risk_no'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :heritage_at_risk,
          'true',
          class: 'govuk-radios__input',
          'data-aria-controls' => "conditional-#{ model_object_name }_heritage_at_risk_true"
        %>

        <%=
          form_object.label :heritage_at_risk_true,
          t('at_risk.labels.heritage_at_risk_yes'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

      <div class="govuk-radios__conditional govuk-radios__conditional--hidden"
        id="<%= "conditional-#{:open_medium_heritage_at_risk_true}" %>">

        <div class="govuk-character-count" data-module="govuk-character-count"
          data-maxwords="500">

          <%=
            form_object.label :heritage_at_risk_description,
            t('at_risk.labels.heritage_at_risk_description'),
            class: 'govuk-label govuk-label--s'
          %>

          <%=
            render(
              partial: 'partials/form_input_errors',
              locals: {
                form_object: model_object,
                input_field_id: :heritage_at_risk_description
              }
            ) if model_object.errors[:heritage_at_risk_description].any?
          %>

          <%=
            form_object.text_area :heritage_at_risk_description,
            rows: 10,
            class: "govuk-textarea  #{'govuk-js-character-count' if I18n.locale == :"en-GB"} " \
              "#{'govuk-input--error' if model_object.errors[:heritage_at_risk_description].any?}",
            'aria-describedby' => "#{ model_object_name }_heritage_at_risk_description-info"
          %>

          <span id="<%= model_object_name %>_heritage_at_risk_description-info"
            class="govuk-hint govuk-character-count__message" aria-live="polite">
            <%= t('generic.word_count', max_words: 500) %>
          </span>

        </div>

      </div>

    </div>

  </fieldset>

</div>
