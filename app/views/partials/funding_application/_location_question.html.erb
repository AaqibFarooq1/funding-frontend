<div class="govuk-caption-xl">
  <%= t('views.funding_application.common.about_your_project') %>
</div>

<div class="govuk-form-group <%= "govuk-form-group--error" if
  model_object.errors.any? %>">

  <fieldset class="govuk-fieldset">

    <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">

      <h1 class="govuk-fieldset__heading">

        <%= t('location.page_heading') %>

      </h1>

    </legend>

    <%=
      render(
        partial: 'partials/form_group_errors',
        locals: {
          form_object: model_object
        }
      ) if model_object.errors.any?
    %>

    <div class="govuk-radios">

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :same_location,
          'yes',
          class: 'govuk-radios__input'
        %>

        <%=
          form_object.label :same_location_yes,
          t('location.label_yes'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :same_location,
          'no',
          class: 'govuk-radios__input'
        %>

        <%=
          form_object.label :same_location_no,
          t('location.label_no'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

    </div>

  </fieldset>

</div>
