<div class="govuk-form-group <%= 'govuk-form-group--error' if
  model_object.errors[:first_fund_application].any? ||
  model_object.errors[:recent_project_title].any? ||
  model_object.errors[:recent_project_reference].any? %>">

  <fieldset class="govuk-fieldset">

    <legend class="govuk-fieldset__legend govuk-fieldset__legend-xl">

      <span class="govuk-caption-xl">
        <%= t('views.funding_application.common.about_your_project') %>
      </span>

      <h1 class="govuk-fieldset__heading">

        <%=
          form_object.label :first_fund_application,
          t('first_fund_application.page_heading'),
          class: 'govuk-label govuk-label--xl'
        %>

      </h1>

    </legend>

    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">

      <%=
        render(
          partial: 'partials/form_input_errors',
          locals: {
            form_object: model_object,
            input_field_id: :first_fund_application
            }
        ) if model_object.errors[:first_fund_application].any?
      %>

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :first_fund_application,
          'true',
          class: 'govuk-radios__input'
        %>

        <%=
          form_object.label :first_fund_application_true,
          t('first_fund_application.labels.x_yes'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :first_fund_application,
          'false',
          class: 'govuk-radios__input',
          'data-aria-controls' => 'conditional-organisation_first_fund_application_false'
        %>

        <%=
          form_object.label :first_fund_application_false,
          t('first_fund_application.labels.x_no'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

      <div class="govuk-radios__conditional govuk-radios__conditional--hidden"
        id="<%= "conditional-#{:organisation_first_fund_application_false}" %>">

        <div class="govuk-form-group">

          <%=
            form_object.label :recent_project_title,
            t('first_fund_application.labels.project_title'),
            class: 'govuk-label govuk-label--s'
          %>

          <%=
            render(
              partial: 'partials/form_input_errors',
              locals: {
                form_object: model_object,
                input_field_id: :recent_project_title
              }
            ) if model_object.errors[:recent_project_title].any?
          %>

          <%=
            form_object.text_field :recent_project_title,
            rows: 10,
            class: "govuk-input govuk-input--width-20 #{'govuk-input--error' if
              model_object.errors[:recent_project_title].any?}",
            'autocomplete' => 'off'
          %>

        </div>

        <div class="govuk-form-group">

          <%=
            form_object.label :recent_project_reference,
            t('first_fund_application.labels.project_reference'),
            class: 'govuk-label govuk-label--s'
          %>

          <%=
            render(
              partial: 'partials/form_input_errors',
              locals: {
                form_object: model_object,
                input_field_id: :recent_project_reference
              }
            ) if model_object.errors[:recent_project_reference].any?
          %>

          <div class="govuk-hint" id="open_medium_recent_project_reference-hint">
            <%= t('first_fund_application.hints.project_reference') %>
          </div>

          <%=
            form_object.text_field :recent_project_reference,
            rows: 10,
            class: "govuk-input govuk-input--width-20 #{'govuk-input--error' if
              model_object.errors[:recent_project_reference].any?}",
            'autocomplete' => 'off',
            'aria-describedby' => 'open_medium_recent_project_reference-hint'
          %>

        </div>

      </div>

    </div>

  </fieldset>

</div>
