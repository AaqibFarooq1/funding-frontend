<div class="nlhf-toolbar">
    <div class="nlhf-toolbar__content govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <ul class="nlhf-toolbar__items">
                  <% if user_signed_in? %>
                    <% if current_user.admin? %>
                      <li class="nlhf-toolbar__item">
                        <%= link_to('Admin', admin_portal_path, class: 'nlhf-toolbar__link') %>
                      </li>
                    <% end %>
                    <li class="nlhf-toolbar__item">
                      <%= link_to(t('buttons.labels.your_account'), edit_user_registration_path, class: 'nlhf-toolbar__link') %>
                    </li>
                  <% end %>
                    <li class="nlhf-toolbar__item">
                      <% if user_signed_in? %>
                        <%= link_to(t('buttons.labels.sign_out'), destroy_user_session_path, method: :delete, class: 'nlhf-toolbar__link') %>
                        <% else %>
                        <%= link_to(t('buttons.labels.sign_in'), new_user_session_path, class: 'nlhf-toolbar__link') %>
                      <% end %>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- /.nlhf-toolbar -->