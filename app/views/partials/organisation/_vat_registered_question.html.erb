<div class="govuk-form-group <%= 'govuk-form-group--error' if
  model_object.errors[:vat_registered].any? || model_object.errors[:vat_number].any? %>">

  <fieldset class="govuk-fieldset">

    <legend class="govuk-fieldset__legend govuk-fieldset__legend-xl">

      <span class="govuk-caption-xl">
        <%= t('views.organisation.common.about_your_organisation') %>
      </span>

      <h1 class="govuk-fieldset__heading">

        <%=
          form_object.label :vat_registered,
          t('vat_registered.page_heading'),
          class: 'govuk-label govuk-label--xl'
        %>

      </h1>

    </legend>

    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">

      <%=
        render(
          partial: 'partials/form_input_errors',
          locals: {
            form_object: model_object,
            input_field_id: :vat_registered
            }
        ) if model_object.errors[:vat_registered].any?
      %>

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :vat_registered,
          'false',
          class: 'govuk-radios__input'
        %>

        <%=
          form_object.label :vat_registered_false,
          t('vat_registered.radio_no'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

      <div class="govuk-radios__item">

        <%=
          form_object.radio_button :vat_registered,
          'true',
          class: 'govuk-radios__input',
          'data-aria-controls' => 'conditional-organisation_vat_registered_true'
        %>

        <%=
          form_object.label :vat_registered_true,
          t('vat_registered.radio_yes'),
          class: 'govuk-label govuk-radios__label'
        %>

      </div>

      <div class="govuk-radios__conditional govuk-radios__conditional--hidden"
        id="<%= "conditional-#{:organisation_vat_registered_true}" %>">

          <%=
            form_object.label :vat_number,
            t('label.vat_number'),
            class: 'govuk-label govuk-label--s'
          %>

          <%=
            render(
              partial: 'partials/form_input_errors',
              locals: {
                form_object: model_object,
                input_field_id: :vat_number
              }
            ) if model_object.errors[:vat_number].any?
          %>


          <%=
            form_object.text_field :vat_number,
            rows: 10,
            class: "govuk-input govuk-input--width-20 #{'govuk-input--error' if
              model_object.errors[:vat_number].any?}"
          %>

      </div>

    </div>

  </fieldset>

</div>
