<div class="govuk-form-group">

  <fieldset class="govuk-fieldset">

    <div class="govuk-radios" data-module="govuk-radios">

      <div class="govuk-radios__item">
        <%= form_object.radio_button :has_board_members_or_trustees, "no", id: "has_board_members_or_trustees_no", value: "no", class: "govuk-radios__input", "data-aria-controls" => "conditional-board_members_or_trustees" %>
        <%= form_object.label :has_board_members_or_trustees_no, t('board_members_or_trustees.options.no_number'), class: "govuk-label govuk-radios__label" %>
      </div>

      <div class="govuk-radios__item">
        <%= form_object.radio_button :has_board_members_or_trustees, "yes", id: "has_board_members_or_trustees_yes", class: "govuk-radios__input", "data-aria-controls" => "conditional-board_members_or_trustees" %>
        <%= form_object.label :has_board_members_or_trustees_yes, t('board_members_or_trustees.options.yes_number'), class: "govuk-label govuk-radios__label" %>
      </div>

      <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-board_members_or_trustees">

        <div class="govuk-form-group <%= 'govuk-form-group--error' if form_object.object.errors[:board_members_or_trustees].any? %>">

          <%= form_object.label :board_members_or_trustees, t('board_members_or_trustees.hints.tell_us'), class: "govuk-label" %>

            <% if form_object.object.errors[:board_members_or_trustees].any? %>

              <span id="board_members_or_trustees-error" class="govuk-error-message">

                <span class="govuk-visually-hidden">Error:</span>

                <%= form_object.object.errors[:board_members_or_trustees].first %>

              </span>

            <% end %>

            <%=
              form_object.text_field :board_members_or_trustees,
              id: "actual_board_members_or_trustees",
              rows: 10,
              class: "govuk-input govuk-input--width-5 #{'govuk-input--error' if
                model_object.errors[:board_members_or_trustees].any?}"
              %>

        </div>

      </div>

    </div>

  </fieldset>

</div>
