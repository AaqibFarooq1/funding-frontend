<%=
  render partial: "partials/page_title",
  locals: {
      model_object: @funding_application,
      page_title:  "Problem importing project"
  }
%>

<%=
  render(
    partial: 'partials/summary_errors',
    locals: {
      form_object: @funding_application,
      first_form_element: :funding_application_migrated_details_correct
    }
  ) if @funding_application.errors.any?
%>

<fieldset class="govuk-fieldset">

  <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
    <h1 class="govuk-heading-l">Problem importing project</h1>
    <h2 class="govuk-heading-m">You are currently logged in as <%= current_user.email %></h2>
  </legend>

  <div class="govuk-error-summary" data-module="govuk-error-summary">
  <div role="alert">
    <h2 class="govuk-error-summary__title">
      Sorry, there is a problem with this project.
    </h2>
    <div class="govuk-error-summary__body">
      <ul class="govuk-list govuk-error-summary__list govuk-list govuk-list--bullet">

        <% if !@emails_match && @project_found %>
          <li>
            <p class="govuk-error-message">
              <%= current_user.email %> 
              is not the main contact for project reference number 
              <%= @salesforce_info_for_page&.Project_Reference_Number__c %>
            </p>
          </li>
        <% end %>

        <% if !@orgs_match && @project_found %>
          <li>
            <p class="govuk-error-message">
              Organisation 
              <%= current_user.organisations.first.name%> 
              with post code 
              <%= current_user.organisations.first.postcode %> 
              does not match the details for project reference number 
              <%= @salesforce_info_for_page&.Project_Reference_Number__c %>
            </p>
          </li>
        <% end %>

        <% unless @project_found %>
          <li>
            <p class="govuk-error-message">
              No project found for the provided link
            </p>
          </li>
        <% end %>

      </ul>
      <p>
        Our Support Team will be in contact shortly. If you have any questions, please email us at
        <a href="mailto:investment-service-support@heritagefund.org.uk">
          investment-service-support@heritagefund.org.uk
        </a>.
      </p>
    </div>
  </div>
</div>

 <div class="govuk-inset-text">
    <p>
      Please
      <%= link_to(t('buttons.labels.sign_out').downcase, destroy_user_session_path, method: :delete, class: 'nlhf-toolbar__link') %>
      and contact your investment manager.
    </p>
    <p>
      When the problem has been resolved you will be asked to try again.
    </p>
  </div>

</fieldset>
